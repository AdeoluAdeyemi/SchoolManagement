@model HomeDetailsViewModel;

@{
    ViewBag.Title = "Details Page";
    var photoPath = "~/Images/" + (Model.Student.PhotoPath ?? "careerpath.PNG");
}

<div class="row justify-content-center" m-3>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header"><h5 class="card-title">@Model.Student.Name</h5></div>
            <div class="card-body text-center">
                <img asp-append-version="true" src="@photoPath" class="card-img-top" />

                <h4>Student Id: @Model.Student.Id</h4>
                <h4>Email: @Model.Student.Email</h4>
                @*<h4>Department: @Model.Student.Department</h4>*@
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-info">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Student.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>


